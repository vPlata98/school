@model Person

@{
    var controller = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    var action = ViewContext.RouteData.Values["action"].ToString().ToLower();
}

<div class="container">
    <form asp-controller="productos" asp-action="ficha" asp-route-id="@Model.PersonID" method="post">
        @if (action == "nuevo")
        {
            <input hidden type="text" class="form-control" asp-for="PersonID" />
        }else{
            <div class="form-group row mb-2">
                <label asp-for="PersonID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="PersonID" />
                    <span asp-validation-for="PersonID" class="text-danger" ></span>
                </div>
            </div>
        }
        <div class="form-group row mb-2">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <label asp-for="EnrollmentDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-format="{0:dd-MM-yyyy}" type="text" class="form-control" asp-for="EnrollmentDate" />
                <span asp-validation-for="EnrollmentDate" class="text-danger" ></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <a asp-controller="estudiantes" asp-action="index" class="btn btn-success">
                    Volver
                </a>
            </div>
            <div class="col-6 text-right">
                <input  asp-controller="estudiantes" asp-action="ficha" type="submit" class="btn btn-success" value="Cargar">
                </input>
            </div>
        </div>
    </form>
</div>